<form class="ui form">
  <div class="ui two fields">
    <div class="field">
      <label>First Name</label>
      {{input type="text" placeholder="firstName" value=model.firstName}}
    </div>
    <div class="field">
      <label>Last Name</label>
      {{input type="text" placeholder="lastName" value=model.lastName}}
    </div>
  </div>
  <div class="ui two fields">
    <div class="field">
      <label>Username</label>
      {{input type="text" placeholder="username" value=model.username}}
    </div>
    <div class="field">
      <label>Password</label>
      {{input type="password" placeholder="your super secret password" value=model.password}}
    </div>
  </div>
  <button class="ui button" {{action 'update' model}}>Save</button>
</form>
{{outlet}}
