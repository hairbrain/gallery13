<form class="form-horizontal">
    <div class="form-group">
        <label for="identification">Name</label>
        {{input type="text" value=model.name class='form-control'}}
    </div>
    <div class="form-group">
        <!-- todo: make slug a read only auto generated property that is the lower cased and dashed version of the name -->
        <label for="slug">Slug</label>
        {{input type="text" value=model.slug class='form-control'}}
    </div>
    <div class="form-group">
        <label for="featureImage">Featured Image</label>
        {{ember-selectize
          content=controller.model.allArtistImages
          value=model.featureImage
          optionValuePath="content.fullUrl"
          optionLabelPath="content.path"
        }}
        {{#if model.featureImage}}
          {{image-preview src=model.featureImage title=model.featureImage alt='Image Preview'}}
        {{/if}}
    </div>
    <div class="form-group">
        <label for="order">Order</label>
        {{input type="text" value=model.order class='form-control'}}
    </div>
</form>