<form class="form-horizontal">
    <h2>New Image</h2>
    <div class="form-group">
        <label for="title">Title</label>
        {{input type="text" value=model.title class='form-control'}}
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        {{input type="text" value=model.description class='form-control'}}
    </div>
    <div class="form-group">
        <label for="order">Order</label>
        {{input type="text" value=model.order class='form-control'}}
    </div>
        <div class="form-group">
        <img src={{controller.image.url}}>
        {{image-upload-button action='queueImage'}}
    </div>
    <button class="btn btn-default" {{action 'saveArtistImage' model}}>Save</button>
    <button class="btn btn-default" {{action 'cancelNewArtistImage' model}}>Cancel</button>
</form>
{{outlet}}
