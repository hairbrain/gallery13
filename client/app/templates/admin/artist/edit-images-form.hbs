<div class="row">
    {{#each images as |image|}}
        <div class="form-group">
            <label for="title">Title</label>
            {{input type="text" value=image.title class='form-control'}}
        </div>
        <div class="form-group">
            <label for="path">Path</label>
            {{input type="text" value=image.path class='form-control'}}
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            {{input type="text" value=image.description class='form-control'}}
        </div>
        <div class="form-group">
            <label for="order">Order</label>
            {{input type="text" value=image.order class='form-control'}}
        </div>
    {{/each}}
</div>