<div class="col-xs-12">
    <form class="form-horizontal">
        <ul class="nav nav-tabs" role="tablist">
            <li role="presentation" class="active"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Blog Post</a></li>
            <li role="presentation"><a href="#excerpt" aria-controls="excerpt" role="tab" data-toggle="tab">Excerpt</a></li>
            <li role="presentation"><a href="#body" aria-controls="body" role="tab" data-toggle="tab">Body</a></li>
        </ul>

        <div class="tab-content">
            <div role="tabpanel" class="tab-pane active" id="profile">
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">Title</label>
                    <div class="col-sm-10">
                        {{input value=model.title class="form-control" placeholder="Title"}}
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">slug (last portion of url)</label>
                    <div class="col-sm-10">
                        {{input value=model.slug class="form-control" placeholder="url-for-this-page"}}
                    </div>
                </div>
                <div class="form-group">
                    <label for="" class="col-sm-2 control-label">Date</label>
                    <div class="col-sm-10">
                        {{input value=model.date class="form-control" placeholder="Short and sweet"}}
                    </div>
                </div>
                <div class="form-group">
                    <label for="featureImage" class="col-sm-2 control-label">Featured Image</label>
                    <div class="col-sm-10">
                      {{ember-selectize
                        content=controller.model.allArtistImages
                        value=model.image
                        optionValuePath="content.fullUrl"
                        optionLabelPath="content.fullTitle"
                      }}
                      {{#if model.image}}
                        {{image-preview src=model.image title=model.image alt='Image Preview'}}
                        <p>{{model.image}}</p>
                      {{/if}}
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="excerpt">
                <div class="form-group">
                    <div class="col-md-6">
                        {{textarea value=model.excerpt class='form-control' rows="20"}}
                    </div>
                    <div class="col-md-6">
                        <h2>Preview</h2>
                        {{markdown-to-html markdown=model.excerpt}}
                    </div>
                </div>
            </div>
            <div role="tabpanel" class="tab-pane" id="body">
                <div class="form-group">
                    <div class="col-md-6">
                        {{textarea value=model.body class='form-control' rows="30"}}
                    </div>
                    <div class="col-md-6">
                        <h2>Preview</h2>
                        {{markdown-to-html markdown=model.body}}
                    </div>
                </div>
            </div>
        </div>
        <button class="btn btn-default" {{action 'cancel' model}}>Cancel</button>
        <button class="btn btn-default" {{action 'update' model}}>Save</button>
        <button class="btn btn-default pull-right" {{action 'delete' model}}>Delete</button>
    </form>


</div>
