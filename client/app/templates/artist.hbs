<h2>Artist Template</h2>
{{#link-to 'artists'}}+all artists{{/link-to}} |

<hr>
<div class="col-sm-12">
    <div class="col-sm-4">

        <h1>Meet, {{name}}</h1>
        <p>{{statement}}</p>
        <div class="artist-description">{{markdown-to-html markdown=description}}</div>
        <!--            <ul class="list-unstyled artists-list">-->
        <div class="image-thumbnail-container">
            {{#each image in images}}
                <div class="col-sm-6" {{action 'enlargeImage' image on='mouseEnter'}}>
                    <img {{bind-attr src=image.path }} class="img-responsive" {{bind-attr alt=image.title}}/>
                    <div class="img-thumbnail">
                        <p>{{image.title}}</p>
                    </div>
                    <p>&nbsp;</p>
                </div>
                <!--                <li>-->


                <!--                </li>-->

            {{/each}}
            <!--            </ul>-->
        </div>
    </div>
    <div class="col-sm-8">
        <div class="featured-image">
            <img {{bind-attr src=enlargedImage.path}} class="img-responsive"/>
            <div class="well-sm">
                <p>{{enlargedImage.title}}</p>
                <p>{{enlargedImage.description}}</p>
            </div>
        </div>
    </div>
</div>
{{outlet}}
