{{#link-to 'artists'}}+all artists{{/link-to}} |
    <!--todo: add links here to sub routes -->
{{#link-to 'artist.index' this}}{{name}}{{/link-to}} |
{{#link-to 'artist.bio' this}}biography{{/link-to}}
<hr>
<div class="col-sm-12">
    <div class="col-sm-4">

        <h1>Meet, {{name}}</h1>
        <p>{{statement}}</p>
        <div class="artist-description">{{markdown-to-html markdown=description}}</div>

        <div class="image-thumbnail-container">
            {{#each image in images}}
                <div class="col-sm-6" {{action 'enlargeImage' image on='mouseEnter'}}>
                    <img {{bind-attr src=image.path }} class="img-responsive" {{bind-attr alt=image.title}}/>
                    <div class="img-thumbnail">
                        <p>{{image.title}}</p>
                    </div>
                    <p>&nbsp;</p>
                </div>
            {{/each}}

        </div>
    </div>
    <div class="col-sm-8">
        {{outlet}}
    </div>
</div>

