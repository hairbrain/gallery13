<form class="form-horizontal">
    <div class="form-group">
        <label for="identification">Name</label>
        {{input type="text" value=name class='form-control'}}
    </div>
    <div class="form-group">
        <!-- todo: make slug a read only auto generated property that is the lower cased and dashed version of the name -->
        <label for="slug">Slug</label>
        {{input type="text" value=slug class='form-control'}}
    </div>
    <div class="form-group">
        <label for="featureImage">Featured Image</label>
        {{input type="text" value=featureImage class='form-control'}}
    </div>
    <div class="form-group">
        <label for="statement">Statement</label>
        {{textarea value=statement class='form-control'}}
    </div>
    <div class="form-group">
        <label for="bio">Bio</label>
        {{textarea value=bio class='form-control'}}
    </div>
    <div class="form-group">
        <label for="description">Description</label>
        {{textarea value=description class='form-control'}}
    </div>
    <div class="form-group">
        <label for="press">Press</label>
        {{textarea value=press class='form-control'}}
    </div>
    <div class="form-group">
        <label for="images">(Images can be added after creating the artist record.)</label>
    </div>
    <button class="btn btn-default" {{action 'updateArtist' model}}>Update Artist</button>
</form>