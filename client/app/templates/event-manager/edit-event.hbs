<form class="form-horizontal">
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Title</label>
        <div class="col-sm-10">
            {{input value=title class="form-control" placeholder="the title"}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Subtitle</label>
        <div class="col-sm-10">
            {{input value=subtitle class="form-control" placeholder="the subtitle"}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">description</label>
        <div class="col-sm-10">
            {{input value=description class="form-control" placeholder="this event is going to be so great."}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">Featured Image</label>
        <div class="col-sm-10">
            {{input value=image class="form-control" placeholder="relative path to the image: /images/my-image.png"}}
        </div>
    </div>
    <div class="form-group">
        <label for="" class="col-sm-2 control-label">order</label>
        <div class="col-sm-10">
            {{textarea value=order class="form-control" placeholder="a number"}}
        </div>
    </div>
    <button class="btn btn-default" {{action 'update' model}}>Update</button>
    <button class="btn btn-default" {{action 'delete' model}}>Delete</button>
    <button class="btn btn-default" {{action 'cancel' model}}>Cancel</button>
</form>