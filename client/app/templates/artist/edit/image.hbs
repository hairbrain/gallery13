<h2>Artist Image Editor</h2>
<div class="image-preview-container">
    <div class="image-preview">
        <img {{bind-attr src=path}} {{bind-attr alt=description}} class="img-thumbnail img-preview"/>
    </div>
    <div class="border">
        <div class="form-group">
            <label for="path">Image Path</label>
            {{input type="text" value=path class='form-control'}}
        </div>
        <div class="form-group">
            <label for="title">Title</label>
            {{input type="text" value=title class='form-control'}}
        </div>
        <div class="form-group">
            <label for="description">Description</label>
            {{input type="text" value=description class='form-control'}}
        </div>
    </div>
    <div class="controls">
        <hr>
        <!-- todo: enable saving or canceling image edit -->
        <button class="btn btn-default">cancel</button>&nbsp;
        <button class="btn btn-default">save</button>
    </div>
</div>
{{outlet}}
